{
  "compilerOptions": {
    "checkJs": true,
    "target": "es2018",
    "module": "commonjs",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "noEmit": true,
    "strict": false,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "*": ["*", "lib/*"]
    }
  },
  "include": ["lib/**/*", "index.js", "test/**/*"],
  "exclude": ["node_modules", "dist"]
}
